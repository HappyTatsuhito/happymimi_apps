<?xml version="1.0" encoding="utf-8"?>
<!--
ゲームパッド操作サンプルのlaunch

rosserialを使ってROSとメガローバーを接続し、PCにゲームパッドを接続してから起動してください。

起動コマンド：roslaunch megarover_samples joycon.launch
 -->

<launch>
  <!-- joy node -->
  <node pkg="joy" type="joy_node" name="happymimi_joy" respawn="true" >
    <param name="dev" type="string" value="/dev/input/js0" /> <!-- デバイスファイルパスを正しく設定してください -->
    <param name="deadzone" value="0.05"/>
  </node>

  <!-- joycon -->
  <node pkg="happymimi_teleop" type="joycon_teleop" name="joycon_teleop" respawn="true">
    <param name="axis_linear" value="4" />
    <param name="axis_angular" value="3" />
    <param name="scale_linear" value="0.6" />
    <param name="scale_angular" value="0.8" />
    <param name="safety_button" value="10" />
  </node>
    

</launch>
